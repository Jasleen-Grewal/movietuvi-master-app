    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:background="@drawable/grad"
        android:paddingBottom="20dp">

    <RelativeLayout
        android:id="@+id/imgUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_border"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="20dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="9dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/pic_nav" />

    </RelativeLayout>


        <TextView
            android:id="@+id/readprofile_name"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_below="@+id/imgUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:fontFamily="sans-serif-light"
            android:text="ZYAN"
            android:textColor="@color/white"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/readprofile_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/readprofile_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Canada, ontario"
            android:textAllCaps="true"
            android:textColor="@color/address"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/readprofile_email"
        android:layout_width="226dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="22dp"
        android:textSize="13sp"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/readprofile_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rellay1"
        tools:text="Email" />

    <TextView
        android:id="@+id/readprofile_gender"
        android:layout_width="224dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:inputType="text"
        android:textSize="15sp"
        android:text="GENDER "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rellay1"
        tools:text="GENDER  " />

    <TextView
        android:id="@+id/readprofile_phone"
        android:layout_width="224dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="54dp"
        android:text="Phone"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Phone" />

    <TextView
        android:id="@+id/readprofile_hobby"
        android:layout_width="222dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        android:text="HOBBY"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/readprofile_birth"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="HOBBY" />

    <TextView
        android:id="@+id/readprofile_birth"
        android:layout_width="224dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="19dp"
        android:text="Date Of Birth "
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/readprofile_email"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Date Of Birth " />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>